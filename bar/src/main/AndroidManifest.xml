<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tequeno.bar">

    <!--
        出于安全考虑 Android 11之后的版本要求访问其他软件包需要先声明
        package直接指定软件包名
        provider访问指定暴露的provider
        intent访问指定暴露的intent activity
    -->
    <queries>
        <package android:name="com.tequeno.rdm" />

        <provider
            android:authorities="com.tequeno.rdm.UserContentProvider"
            android:exported="false" />
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bar">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
        android:exported="true"允许外部应用调用
        intent-filter 可以自定义自己的action和category提供外部应用
        -->
        <activity
            android:name=".MyIntentActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.tequeno.bar.myintent" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Intent1Activity"
            android:exported="false" />
        <activity
            android:name=".listview.ListViewActivity"
            android:exported="false" />
        <activity
            android:name=".viewpager.ViewPagerActivity"
            android:exported="false" />
        <activity
            android:name=".fragment.FragmentActivity"
            android:exported="false" />
        <activity
            android:name=".service.ServiceActivity"
            android:exported="false" />
        <service android:name=".service.MyService"/>
    </application>

</manifest>